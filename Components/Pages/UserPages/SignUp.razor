@page "/signup"
@using Microsoft.EntityFrameworkCore
@using FinalProject.Models
@using FinalProject.Data
@inject NavigationManager NavigationManager

<h1>Sign Up</h1>

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Your Application</a>
    </div>
</div>

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3 mb-3">
            <NavLink class="nav-link p-0" href="/">
                <span class="badge bg-dark d-flex align-items-center fs-5 p-3">
                    <span class="bi bi-house-door me-2" aria-hidden="true"></span>Home
                </span>
            </NavLink>
        </div>
    </nav>
</div>

<h3>Create an Account</h3>

<form method="post">
    <div class="mb-3">
        <label for="UserName" class="form-label">Username</label>
        <input type="text" class="form-control" id="UserName" name="UserName" required />
    </div>

    <div class="mb-3">
        <label for="Email" class="form-label">Email address</label>
        <input type="email" class="form-control" id="Email" name="Email" required />
    </div>

    <div class="mb-3">
        <label for="FirstName" class="form-label">First Name</label>
        <input type="text" class="form-control" id="FirstName" name="FirstName" required />
    </div>

    <div class="mb-3">
        <label for="LastName" class="form-label">Last Name</label>
        <input type="text" class="form-control" id="LastName" name="LastName" required />
    </div>
</form>

<form action="/submit" method="POST">
    <!-- Your form fields go here -->
    <button type="submit" class="btn btn-primary" onclick="window.location.href='/user'; return false;">Sign Up</button>
</form>


